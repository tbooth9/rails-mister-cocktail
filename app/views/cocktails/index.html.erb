<h1>Welcome to Mister Cocktail</h1>



<div class="container">
	<div class="row">
		<% @cocktails.each do |cocktail| %>
				<div class="col col-xs-12 col-sm-4">
					<%= link_to cocktail_path(cocktail) do %>
					<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1499950617211-a8609a16ad72?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=3dd421728e43f418d59662d1a2352358&auto=format&fit=crop&w=2093&q=80');">
					  <div class="card-category">Popular</div>
					  <div class="card-description">
					    <h2><%= cocktail.name %></h2>
					  </div>
					</div>
					<% end %>
				</div>
		<% end %>	

		<%= link_to "Add a Cocktail!", new_cocktail_path %>	
	</div>
</div>

